# GKE Ingress with Google Managed Certificate
global:
  registry: gcr.io/your-gcp-project # or ghcr.io/your-org
  tag: v0.1.0

echoCloud:
  replicaCount: 3
  env:
    NODE_ENV: production
    PORT: "3000"

dashboard:
  replicaCount: 3
  env:
    NODE_ENV: production
    PORT: "3000"
    NEXT_PUBLIC_API_BASE: https://api.example.com

ingress:
  enabled: true
  className: gce
  # GKE Ingress annotations for managed cert and static IP
  annotations:
    networking.gke.io/managed-certificates: echoforge-managed-cert
    kubernetes.io/ingress.global-static-ip-name: echoforge-ip
  tls:
    enabled: false # Managed cert handles TLS; no secret needed
  hosts:
    dashboard: dashboard.example.com
    api: api.example.com
  canary:
    enabled: false

# Note: You must create a ManagedCertificate resource separately:
# apiVersion: networking.gke.io/v1
# kind: ManagedCertificate
# metadata:
#   name: echoforge-managed-cert
# spec:
#   domains:
#     - dashboard.example.com
#     - api.example.com
