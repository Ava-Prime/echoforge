{
  "name": "@echoforge/echo-cloud",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest",
    "docker:build": "docker build -t echo-cloud .",
    "docker:run": "docker run -p 8080:8080 echo-cloud",
    "deploy": "gcloud builds submit --config cloudbuild.yaml",
    "deploy:staging": "gcloud builds submit --config cloudbuild.yaml --substitutions=_ENV=staging",
    "deploy:prod": "gcloud builds submit --config cloudbuild.yaml --substitutions=_ENV=production"
  },
  "dependencies": {
    "@echoforge/echocore": "workspace:*",
    "@echoforge/codessa": "workspace:*",
    "@echoforge/mirror": "workspace:*",
    "@echoforge/forgekit": "workspace:*",
    "@google-cloud/secret-manager": "^5.0.0",
    "@google-cloud/storage": "^7.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "rimraf": "^5.0.0"
  }
}
